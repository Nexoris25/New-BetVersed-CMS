{
  "kind": "collectionType",
  "collectionName": "countries",
  "info": {
    "singularName": "country",
    "pluralName": "countries",
    "displayName": "Country"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "countryName": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "countryCode": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "flag": {
      "type": "media",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "country_pages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::country-page.country-page",
      "mappedBy": "country"
    },
    "operator_countries": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::operator-country.operator-country",
      "mappedBy": "country"
    }
  }
}
