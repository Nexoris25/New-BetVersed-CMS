{
  "kind": "collectionType",
  "collectionName": "payment_channels",
  "info": {
    "singularName": "payment-channel",
    "pluralName": "payment-channels",
    "displayName": "Payment Channel"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "e-Wallet",
        "Bank Transfer",
        "Card",
        "USSD",
        "Crypto",
        "Mobile Money"
      ]
    },
    "payment_methods": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::payment-method.payment-method",
      "inversedBy": "payment_channels"
    }
  }
}
