{
  "kind": "collectionType",
  "collectionName": "payment_methods",
  "info": {
    "singularName": "payment-method",
    "pluralName": "payment-methods",
    "displayName": "Payment Method"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "e-wallet",
        "Card",
        "Bank Transfer",
        "Crypto",
        "Mobile Money"
      ]
    },
    "isActive": {
      "type": "boolean"
    },
    "transaction_time": {
      "type": "string"
    },
    "fees": {
      "type": "string"
    },
    "min_deposit": {
      "type": "string"
    },
    "max_payout": {
      "type": "string"
    },
    "crypto_payments_supported": {
      "type": "boolean"
    },
    "operator_countries": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::operator-country.operator-country",
      "mappedBy": "payment_methods"
    }
  }
}
