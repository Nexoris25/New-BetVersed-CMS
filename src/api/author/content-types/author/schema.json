{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "role": {
      "type": "enumeration",
      "enum": [
        "Reviewer",
        "Fact Checker",
        "Editor"
      ]
    },
    "shortBio": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      }
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "fullBio": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      }
    },
    "socialMedia": {
      "type": "component",
      "component": "socials.social-links",
      "repeatable": true
    },
    "sportsbook_bonuses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::sportsbook-bonus.sportsbook-bonus",
      "mappedBy": "reviewed_by"
    },
    "sportsbook_reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::sportsbook-review.sportsbook-review",
      "mappedBy": "fact_checked_by"
    },
    "casino_reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::casino-review.casino-review",
      "mappedBy": "written_by"
    },
    "casino_bonuses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::casino-bonus.casino-bonus",
      "mappedBy": "reviewed_by"
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "writtenBy"
    },
    "factCheckedArticles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "fact_checked_by"
    },
    "public_url": {
      "type": "component",
      "component": "shared.public-url",
      "repeatable": false
    }
  }
}
