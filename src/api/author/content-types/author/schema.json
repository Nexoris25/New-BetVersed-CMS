{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "role": {
      "type": "enumeration",
      "enum": [
        "iGaming Analyst and Reviewer",
        "iGaming Content Editor and Fact-checker",
        "iGaming Content Editor",
        "iGaming Content Writer",
        "Reviewer and Fact-checker",
        "iGaming Content Writer and Editor",
        "Sports Betting Analyst",
        "Casino Gaming Analyst",
        "iGaming Content Writer and Reviewer"
      ]
    },
    "shortBio": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      }
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "fullBio": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      }
    },
    "socialMedia": {
      "type": "component",
      "component": "socials.social-links",
      "repeatable": true
    },
    "sportsbook_bonuses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::sportsbook-bonus.sportsbook-bonus",
      "mappedBy": "reviewed_by"
    },
    "sportsbook_reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::sportsbook-review.sportsbook-review",
      "mappedBy": "fact_checked_by"
    },
    "casino_reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::casino-review.casino-review",
      "mappedBy": "written_by"
    },
    "casino_bonuses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::casino-bonus.casino-bonus",
      "mappedBy": "reviewed_by"
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "writtenBy"
    },
    "factCheckedArticles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "fact_checked_by"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "sportsbook_review": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::sportsbook-review.sportsbook-review",
      "mappedBy": "reviewed_by"
    },
    "sportsbook_bonus": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::sportsbook-bonus.sportsbook-bonus",
      "mappedBy": "fact_checked_by"
    },
    "casino_review": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::casino-review.casino-review",
      "mappedBy": "fact_checked_by"
    },
    "casino_bonus": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::casino-bonus.casino-bonus",
      "mappedBy": "fact_checked_by"
    }
  }
}
