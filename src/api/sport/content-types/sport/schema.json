{
  "kind": "collectionType",
  "collectionName": "sports",
  "info": {
    "singularName": "sport",
    "pluralName": "sports",
    "displayName": "Sport"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "is_active": {
      "type": "boolean"
    },
    "priority": {
      "type": "integer"
    },
    "leagues": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::league.league",
      "mappedBy": "sport"
    }
  }
}
